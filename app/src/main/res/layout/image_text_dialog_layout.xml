<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/id_add_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Adhar"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <ImageView
        android:paddingHorizontal="50dp"
        android:id="@+id/id_add_image"
        android:src="@drawable/add_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        />

    <com.swiftsynq.otpcustomview.CustomOtpView
        android:id="@+id/id_info_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        app:cursorColor="@color/colorAccent"
        app:cursorWidth="2dp"
        app:itemCount="12"
        app:itemHeight="52dp"
        app:itemRadius="3dp"
        app:itemSpacing="0dp"
        app:itemWidth="26dp"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="21sp"
        app:lineColor="@color/colorAccent"
        app:lineWidth="1dp"
        app:viewType="rectangle"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_below="@id/id_dialog_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/id_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="#ff1122"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/id_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:layout_marginLeft="90dp"
            android:background="@color/startblue"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>