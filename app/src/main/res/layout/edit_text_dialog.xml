<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="20dp"
    >

    <TextView
        android:id="@+id/id_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textAlignment="center"
        />

    <EditText
        android:layout_below="@id/id_dialog_title"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/id_dialog_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:inputType="number"
        />

    <LinearLayout
        android:layout_below="@id/id_dialog_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/id_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="#ff1122"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/id_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginLeft="90dp"
            android:background="@color/startblue"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>